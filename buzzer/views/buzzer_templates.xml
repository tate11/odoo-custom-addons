<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Layout -->
        <template id="buzzer_layout" name="Quiz Layout Page">
            &lt;!DOCTYPE html&gt;
            <html style="height: 100%">
                <head>
                    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
                    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
                    <title>Buzzer</title>

                    <t t-call-assets="web.assets_common" t-js="false"/>
                    <t t-call-assets="web.assets_common" t-css="false"/>
                    <t t-call-assets="web.assets_frontend" t-js="false"/>
                    <t t-call-assets="web.assets_frontend" t-css="false"/>

                </head>
                <body>
                    <nav class="navbar navbar-inverse navbar-fixed-top">
                      <div class="container">
                        <div class="navbar-header">
                          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                          </button>
                          <a class="navbar-brand" href="/buzzer">Games</a>
                        </div>
                        <div id="navbar" class="navbar-collapse collapse">
                            <ul class="nav navbar-nav navbar-right">
                                <li>
                                    <a href="/web/session/logout">Logout</a>
                                </li>
                            </ul>
                        </div><!--/.navbar-collapse -->
                      </div>
                    </nav>
                    <t t-raw="0"/>
                </body>
            </html>
        </template>

        <template id="buzzer_index_page" name="Buzzer Index Page">
            <t t-call="buzzer.buzzer_layout">
                <div class="jumbotron">
                    <h1>Buzzer Channels</h1>
                    <p class="lead">Choississez votre channel pour buzzer avant vos adversaires !</p>
                </div>
                <div class="container mt30">
                    <div class="row">
                        <t t-foreach="channels" t-as="channel">
                            <div class="col-md-6 col-sm-12 col-xs-12">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <h3><t t-esc="channel.name"/></h3>
                                        <p><t t-esc="channel.description"/></p>
                                        <a t-att-href="channel.url" type="button" class="btn btn-primary btn-lg btn-block">
                                            <i class="fa fa-play"/> Play
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
        </template>

        <template id="buzzer_buzz_page" name="Buzzer Index Page">
            <t t-call="buzzer.buzzer_layout">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12" id="o_buzzer_container" t-att-data-channel-uuid="channel.uuid" t-att-data-user-id="user.id">

                        </div>
                    </div>
                </div>
            </t>
        </template>

    </data>
</odoo>