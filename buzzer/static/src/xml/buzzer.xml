<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

    <t t-name="buzzer.button">
        <div t-attf-class="o_buzzer_button {{ widget.options.mode_readonly ? 'o_buzzer_readonly' : 'o_buzzer_no_readonly'}}">
            <a href="#" id="o_buzzer_btn" t-att-channel-uuid="widget.options.channel_uuid" t-att-user-id="widget.options.user_id" type="button" t-attf-class="btn btn-default btn-lg btn-block o_buzzer_btn {{ widget.options.mode_readonly ? 'disabled' : ''}}">BUZZ</a>
            <t t-if="widget.options.mode_readonly">
                <p class="o_buzzer_player_name"><t t-esc="widget.options.user_name"/></p>
            </t>
        </div>
    </t>

    <t t-name="buzzer.client_action">
        <div class="container o_form_sheet_bg">
            <div class="row o_form_sheet">
                <div class="col-md-12 o_buzzer_admin_panel">
                    <div class="row o_buzzer_admin_actions">
                        <div class="col-md-12">
                            <button type="button" class="btn btn-info btn-lg o_buzzer_btn_reset"><i class="fa fa-refresh"/> Reset</button>
                            <button type="button" class="btn btn-danger btn-lg o_buzzer_btn_stop"><i class="fa fa-stop"/> Stop</button>
                        </div>
                    </div>
                    <div class="row o_buzzer_admin_participants">
                        <p class="text-center">
                            <i class="fa fa-cog fa-lg fa-spin fa-3x"/>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
